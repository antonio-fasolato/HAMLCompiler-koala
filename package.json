{
	"name": "haml-compiler",
	"display": "HAML compiler",
	"description": "A koala extension that adds support for compiling HAML files.",
	"keywords": ["koala", "HAML", "compiler"],

	"version": "0.1.0",
	"koalaVersion": ">=2.0.0",

	"dependancies" : {},
	"main": "HAMLCompiler.js",
	"fileTypes": [{
		"extension": "haml",
		"output": "html",
		"icon": "haml.png",
		"category": ""
	}],

	"options": [
		{
			"type": "droplist",
			"name": "outputStyle",
			"display": "Output Style",
			"items": [
				{
					"value": "I",
					"text": "indented"
				},
				{
					"value": "U",
					"text": "Ugly"
				}
			],
			"default": "I"
		}
	],
	"advanced": [
		{
			"type": "text",
			"name": "commandPath",
			"display": "Use the HAML executable at this path (leave haml if it is in your PATH)",
			"default": "haml",
			"placeholder": "Default: haml"
		}
	],
	"projectSettings": "",

	"libraries": []
}
